generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @unique
  email     String     @unique
  name      String
  username  String     @unique
  password  String
  dob       String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

